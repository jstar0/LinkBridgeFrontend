.container {
  min-height: 100vh;
  background-color: var(--td-bg-color-container);
}

.form-container {
  padding: 40rpx 32rpx;
}

.form-section {
  background-color: var(--td-bg-color-secondarycontainer);
  border-radius: 16rpx;
  overflow: hidden;
}

.password-strength {
  padding: 24rpx 0;
  font-size: 26rpx;
}

.strength-label {
  color: var(--td-text-color-secondary);
}

.strength-value {
  font-weight: bold;
}

.strength-weak {
  color: var(--td-error-color);
}

.strength-medium {
  color: var(--td-warning-color);
}

.strength-strong {
  color: var(--td-success-color);
}

.error-message {
  color: var(--td-error-color);
  font-size: 26rpx;
  padding: 24rpx 0;
  text-align: center;
}

.button-section {
  padding: 48rpx 0 24rpx;
}

.link-section {
  text-align: center;
  padding: 24rpx 0;
}

.link-text {
  color: var(--td-brand-color);
  font-size: 28rpx;
}
