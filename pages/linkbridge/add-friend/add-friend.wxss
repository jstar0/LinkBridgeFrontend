.lb-page {
  min-height: 100vh;
  background: var(--td-bg-color-page);
}

.lb-page__content {
  padding: 32rpx;
  box-sizing: border-box;
}

.lb-add-friend__loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  gap: 24rpx;
}

.lb-add-friend__loading-text {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}

.lb-add-friend__result {
  padding: 64rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.lb-add-friend__title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
}

.lb-add-friend__desc {
  margin-top: 18rpx;
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}

