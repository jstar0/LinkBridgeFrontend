.lb-page {
  min-height: 100vh;
  background: var(--td-bg-color-page);
}

.lb-page__content {
  padding: 32rpx;
  padding-bottom: 140rpx;
  box-sizing: border-box;
}

.lb-dashboard__capsule {
  display: flex;
  align-items: center;
  justify-content: center;
}

.lb-dashboard__capsule-icon {
  color: var(--td-text-color-primary);
}

.lb-dashboard__search {
  margin-bottom: 24rpx;
}

.lb-dashboard__avatar-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.lb-dashboard__cell-note {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  gap: 12rpx;
}

.lb-dashboard__time {
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
}

.lb-connection-modal {
  width: 560rpx;
  padding: 32rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  background: var(--td-bg-color-container);
}

.lb-connection-modal__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.lb-connection-modal__title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--td-text-color-primary);
}

.lb-connection-modal__close {
  color: var(--td-text-color-secondary);
}

.lb-connection-modal__info {
  margin-top: 32rpx;
}

.lb-connection-modal__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--td-border-level1-color);
}

.lb-connection-modal__row:last-child {
  border-bottom: none;
}

.lb-connection-modal__label {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}

.lb-connection-modal__value {
  font-size: 28rpx;
  color: var(--td-text-color-primary);
}

.lb-connection-modal__id {
  color: var(--td-brand-color);
  font-size: 24rpx;
  word-break: break-all;
  max-width: 300rpx;
  text-align: right;
}

.lb-connection-modal__hint {
  margin-top: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}

.lb-connection-modal__qr {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lb-connection-modal__qr-image {
  width: 420rpx;
  height: 420rpx;
  border-radius: 16rpx;
  background: #ffffff;
}

.lb-connection-modal__qr-placeholder {
  width: 420rpx;
  height: 420rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--td-bg-color-secondarycontainer);
}

.lb-connection-modal__placeholder-text {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}
