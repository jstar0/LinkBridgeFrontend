<view class="lb-page">
  <t-navbar title="{{navbarTitle}}" leftArrow bind:go-back="onTapBack" />

  <view class="lb-call">
    <view class="lb-call__title">
      <text class="lb-call__title-text">{{peerDisplayName || '通话'}}</text>
    </view>

    <view class="lb-call__status">
      <text class="lb-call__status-text">{{statusText}}</text>
    </view>

    <view class="lb-call__actions">
      <t-button
        wx:if="{{showAccept}}"
        theme="primary"
        shape="round"
        content="接听"
        bind:tap="onTapAccept"
      />
      <t-button
        wx:if="{{showReject}}"
        theme="danger"
        shape="round"
        content="拒绝"
        bind:tap="onTapReject"
      />
      <t-button
        wx:if="{{showCancel}}"
        theme="default"
        variant="outline"
        shape="round"
        content="取消"
        bind:tap="onTapCancel"
      />
      <t-button
        wx:if="{{showHangup}}"
        theme="danger"
        shape="round"
        content="挂断"
        bind:tap="onTapHangup"
      />
    </view>
  </view>
</view>
