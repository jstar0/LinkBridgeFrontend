.container {
  min-height: 100vh;
  background-color: var(--td-bg-color-container);
}

.form-container {
  padding: 40rpx 32rpx;
}

.logo-section {
  text-align: center;
  padding: 80rpx 0;
}

.logo-text {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--td-brand-color);
}

.logo-subtitle {
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
  margin-top: 16rpx;
}

.form-section {
  background-color: var(--td-bg-color-secondarycontainer);
  border-radius: 16rpx;
  overflow: hidden;
}

.error-message {
  color: var(--td-error-color);
  font-size: 26rpx;
  padding: 24rpx 0;
  text-align: center;
}

.button-section {
  padding: 48rpx 0 24rpx;
}

.link-section {
  text-align: center;
  padding: 24rpx 0;
}

.link-text {
  color: var(--td-brand-color);
  font-size: 28rpx;
}
