.lb-page {
  min-height: 100vh;
  background: var(--td-bg-color-page);
}

.lb-page__content {
  padding: 32rpx;
  box-sizing: border-box;
}

.lb-archive__loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.lb-archive__loading-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: var(--td-text-color-secondary);
}

.lb-archive__avatar-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  opacity: 0.6;
}

.lb-archive__list {
  opacity: 0.8;
}
