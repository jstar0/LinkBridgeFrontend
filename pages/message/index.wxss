/* pages/message/message.wxss */
page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 112rpx);
}
.nav-bar {
  border-bottom: 1rpx solid #e7e7e7;
}
.message-list {
  height: 0;
  flex-grow: 1;
}
.avatar {
  border-radius: 50% !important;
}
.lb-session-cell__center {
  min-width: 0;
}

.content {
  min-width: 0;
}

.content > view {
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.lb-unread-badge {
  min-width: 40rpx;
  height: 40rpx;
  padding: 0 12rpx;
  border-radius: 999rpx;
  background: #fa5151;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  box-sizing: border-box;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Fix: unread badge (t-badge) must stay inside the cell right area.
   Without an inner content slot, TDesign treats it like a corner badge and may overflow. */
.wrapper {
  margin-right: 16rpx;
}
